<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/adminindex"
          ><i class="fas fa-angle-double-left"></i> All Students</a
        >
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-light">Use the below form to Update an account</span>
    </div>

    <!-- add user form -->
    <!-- form handling -->
    <form method="POST" id="update_user">
      <div class="new_user">
        <div class="form-group">
          <label for="oops" class="text-light"
            >Enter Marks in OOPS <br
          /></label>
          <input type="hidden" name="id" value="<%= student._id %>" />
          <input
            type="number"
            name="oops"
            value="<%= student.oops %>"
            placeholder=""
          />
        </div>
        <div class="form-group">
          <label for="dsa" class="text-light"
            ><br />
            Enter Marks in DSA <br
          /></label>
          <input
            type="number"
            name="dsa"
            value="<%= student.dsa%>"
            placeholder=""
          />
        </div>
        <div class="form-group">
          <label for="maths" class="text-light"
            ><br />
            Enter Marks in Mathematics <br
          /></label>
          <input
            type="number"
            name="maths"
            value="<%= student.maths%>"
            placeholder=""
          />
        </div>
        <div class="form-group">
          <label for="softskills" class="text-light"
            ><br />
            Enter Marks in Soft Skills <br
          /></label>
          <input
            type="number"
            name="softskills"
            value="<%= student.softskills%>"
            placeholder=""
          />
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
